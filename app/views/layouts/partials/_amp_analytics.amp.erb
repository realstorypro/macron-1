<amp-analytics type="segment">
  <script type="application/json">
  {
    "vars": {
      "writeKey": "<%= ENV['SEGMENT_JS_KEY'] %>",
      "name": "<%= @entry.name %>"
    },
    "extraUrlParams": {
      "properties.slug": "<%= @entry.slug %>",
      "properties.category": "<%= @entry.category.name %>",
      "properties.tags": <%= raw(@entry.tags.collect(&:name)) %>
    },
    "triggers": {
      "click": {
        "on": "click",
        "selector": ".full.version.switch",
        "request": "track",
        "vars": {
          "event": "Switched to Full Version"
        }
      }
    }
  }
</script>
</amp-analytics>