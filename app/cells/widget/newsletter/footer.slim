= widget name: 'newsletter', class: 'hidden', id: 'newsletter', data: {email: email}, vue: :on
  = h5 text: 'Get Our Updates'
  p v-if="!errorMessage && !successMessage" transition="fade"
    | Receive a weekly newsletter with our new articles & discussions.
  p v-if="errorMessage && !successMessage" transition="fade"
    | {{ hardcodedErrorMessage }}
  p v-if="successMessage" transition="fade"
    | {{ hardcodedSuccessMessage }}
  form.ui.form @submit.prevent="subscribe($event)" v-if="!successMessage"
    = field 'field fluid'
      input type='email' placeholder='Email Address' name="email" v-model='email' required='true'
    button.ui.icon.button.right.labeled.fluid class=button_color type='submit' v-bind:class='{ loading: sending }'
      = icon 'right chevron'
      | Subscribe
